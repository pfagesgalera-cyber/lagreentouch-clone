<section class="press-section">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>

    <div class="press-logos">
      {% for block in section.blocks %}
        {% if block.settings.logo %}
          <a href="{{ block.settings.link }}" class="press-logo" {{ block.shopify_attributes }} {% if block.settings.link != blank %}target="_blank" rel="noopener"{% endif %}>
            <img src="{{ block.settings.logo | img_url: '200x100' }}" alt="{{ block.settings.name }}" loading="lazy">
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .press-section {
    padding: 2rem 1rem;
    background-color: #f8f6f4;
  }

  @media (min-width: 768px) {
    .press-section {
      padding: 3rem 1rem;
    }
  }

  @media (min-width: 1024px) {
    .press-section {
      padding: 4rem 1rem;
    }
  }

  .press-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .press-section h2 {
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 2rem;
    text-align: center;
    color: #333;
  }

  @media (min-width: 640px) {
    .press-section h2 {
      font-size: 1.5rem;
      margin-bottom: 3rem;
    }
  }

  .press-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .press-logos {
      gap: 3rem;
    }
  }

  .press-logo {
    display: block;
    transition: all 0.3s;
  }

  .press-logo img {
    height: 32px;
    width: auto;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s;
  }

  @media (min-width: 640px) {
    .press-logo img {
      height: 48px;
    }
  }

  .press-logo:hover img {
    filter: grayscale(0%);
    opacity: 1;
    transform: scale(1.1);
  }
</style>

{% schema %}
{
  "name": "Press Mentions",
  "tag": "section",
  "class": "section-press",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "La presse en parle !"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Press Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Press Name",
          "default": "Press"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Mentions",
      "blocks": [
        { "type": "logo", "settings": { "name": "Press 1" } },
        { "type": "logo", "settings": { "name": "Press 2" } },
        { "type": "logo", "settings": { "name": "Press 3" } },
        { "type": "logo", "settings": { "name": "Press 4" } },
        { "type": "logo", "settings": { "name": "Press 5" } },
        { "type": "logo", "settings": { "name": "Press 6" } }
      ]
    }
  ]
}
{% endschema %}
