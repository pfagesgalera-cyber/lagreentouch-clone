<section class="plant-care-section">
  <div class="container">
    <div class="plant-care-card">
      <div class="plant-care-image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: '800x600', crop: 'center' }}" alt="{{ section.settings.title }}" loading="lazy">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="plant-care-content">
        <h2>{{ section.settings.title }}</h2>
        <div class="plant-care-description">
          {{ section.settings.description }}
        </div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-outline-white">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .plant-care-section {
    padding: 2rem 1rem;
    background-color: #f8f6f4;
  }

  @media (min-width: 768px) {
    .plant-care-section {
      padding: 3rem 1rem;
    }
  }

  @media (min-width: 1024px) {
    .plant-care-section {
      padding: 4rem 1rem;
    }
  }

  .plant-care-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .plant-care-card {
    display: grid;
    grid-template-columns: 1fr;
    border-radius: 0.5rem;
    overflow: hidden;
    background: linear-gradient(to right, white, #c9a882);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s;
  }

  @media (min-width: 768px) {
    .plant-care-card {
      grid-template-columns: 1fr 1fr;
    }
  }

  .plant-care-card:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  }

  .plant-care-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  @media (min-width: 768px) {
    .plant-care-image img {
      height: 100%;
      min-height: 300px;
    }
  }

  .plant-care-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .plant-care-content {
      padding: 3rem;
    }
  }

  .plant-care-content h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 1rem;
    color: white;
  }

  @media (min-width: 640px) {
    .plant-care-content h2 {
      font-size: 1.875rem;
      margin-bottom: 1.5rem;
    }
  }

  .plant-care-description {
    font-size: 0.875rem;
    color: white;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .plant-care-description {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
  }

  .plant-care-description p {
    margin-bottom: 0;
  }

  .plant-care-description strong {
    font-weight: 600;
  }

  .plant-care-section .btn-outline-white {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 1px solid white;
    color: white;
    background: transparent;
    border-radius: 9999px;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.3s;
    width: fit-content;
  }

  .plant-care-section .btn-outline-white:hover {
    background-color: white;
    color: #c9a882;
  }
</style>

{% schema %}
{
  "name": "Plant Care CTA",
  "tag": "section",
  "class": "section-plant-care",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tout savoir sur ma plante d'intérieur"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Comment <strong>entretenir ma plante</strong> ? Quand <strong>rempoter</strong> ? Quand <strong>arroser</strong> ? Si vous vous posez toutes ces questions, vous êtes au bon endroit !</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Guide d'entretien"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Plant Care CTA"
    }
  ]
}
{% endschema %}
