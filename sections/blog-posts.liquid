<section class="blog-section">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    {% if section.settings.view_all_link != blank %}
      <p class="section-link"><a href="{{ section.settings.view_all_link }}">{{ section.settings.view_all_text }}</a></p>
    {% endif %}

    <div class="blog-grid">
      {% if section.settings.blog != blank %}
        {% for article in blogs[section.settings.blog].articles limit: section.settings.posts_limit %}
          <a href="{{ article.url }}" class="blog-card">
            <div class="blog-image">
              {% if article.image %}
                <img src="{{ article.image | img_url: '400x300', crop: 'center' }}" alt="{{ article.title }}" loading="lazy">
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="blog-content">
              <h3>{{ article.title }}</h3>
              <p class="blog-excerpt">{{ article.excerpt_or_content | strip_html | truncate: 150 }}</p>
              <p class="blog-meta">{{ article.author }} | {{ article.published_at | date: "%d %B %Y" }}</p>
            </div>
          </a>
        {% endfor %}
      {% else %}
        {% for block in section.blocks %}
          <div class="blog-card" {{ block.shopify_attributes }}>
            <div class="blog-image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '400x300', crop: 'center' }}" alt="{{ block.settings.title }}" loading="lazy">
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="blog-content">
              <h3>{{ block.settings.title }}</h3>
              <p class="blog-excerpt">{{ block.settings.excerpt }}</p>
              <p class="blog-meta">{{ block.settings.author }} | {{ block.settings.date }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: 2rem 1rem;
    background-color: #f8f6f4;
  }

  @media (min-width: 768px) {
    .blog-section {
      padding: 3rem 1rem;
    }
  }

  @media (min-width: 1024px) {
    .blog-section {
      padding: 4rem 1rem;
    }
  }

  .blog-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .blog-section h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 0.25rem;
    text-align: center;
    color: #333;
  }

  @media (min-width: 640px) {
    .blog-section h2 {
      font-size: 1.875rem;
    }
  }

  .blog-section .section-link {
    text-align: center;
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .blog-section .section-link {
      margin-bottom: 3rem;
    }
  }

  .blog-section .section-link a {
    color: #6a8f53;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .blog-section .section-link a:hover {
    text-decoration: underline;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .blog-card {
    background: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
    text-decoration: none;
    display: block;
  }

  .blog-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .blog-image {
    overflow: hidden;
    height: 180px;
  }

  @media (min-width: 640px) {
    .blog-image {
      height: 200px;
    }
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.1);
  }

  .blog-content {
    padding: 1rem;
  }

  @media (min-width: 640px) {
    .blog-content {
      padding: 1.5rem;
    }
  }

  .blog-content h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: #333;
    transition: color 0.2s;
  }

  @media (min-width: 640px) {
    .blog-content h3 {
      font-size: 1.125rem;
    }
  }

  .blog-card:hover h3 {
    color: #6a8f53;
  }

  .blog-excerpt {
    font-size: 0.875rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .blog-meta {
    font-size: 0.75rem;
    color: #999;
    margin: 0;
  }
</style>

