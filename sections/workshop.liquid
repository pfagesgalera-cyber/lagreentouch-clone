<section class="workshop-section">
  <div class="container">
    <div class="workshop-grid">
      <div class="workshop-image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: '800x600', crop: 'center' }}" alt="{{ section.settings.title }}" loading="lazy">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="workshop-content">
        <h2>{{ section.settings.title }}</h2>
        <div class="workshop-description">
          {{ section.settings.description }}
        </div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .workshop-section {
    padding: 2rem 1rem;
    background-color: white;
  }

  @media (min-width: 768px) {
    .workshop-section {
      padding: 3rem 1rem;
    }
  }

  @media (min-width: 1024px) {
    .workshop-section {
      padding: 4rem 1rem;
    }
  }

  .workshop-section .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .workshop-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .workshop-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  .workshop-image img {
    width: 100%;
    border-radius: 0.5rem;
    transition: box-shadow 0.3s;
  }

  .workshop-image img:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .workshop-content h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 1rem;
    color: #333;
  }

  @media (min-width: 640px) {
    .workshop-content h2 {
      font-size: 1.875rem;
      margin-bottom: 1.5rem;
    }
  }

  .workshop-description {
    font-size: 0.875rem;
    color: #666;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .workshop-description {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
  }

  .workshop-description p {
    margin-bottom: 1rem;
  }

  .workshop-description strong {
    color: #333;
  }

  .workshop-section .btn-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #6a8f53;
    color: white;
    border: none;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
    cursor: pointer;
  }

  .workshop-section .btn-primary:hover {
    background-color: #5c7847;
    box-shadow: 0 4px 12px rgba(106, 143, 83, 0.3);
  }
</style>

{% schema %}
{
  "name": "Workshop Section",
  "tag": "section",
  "class": "section-workshop",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Workshop Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ateliers sur Bordeaux"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Après plusieurs années sur Paris et banlieue parisienne, <strong>La Green Touch</strong> est désormais présente aujourd'hui sur <strong>Bordeaux</strong> pour vous proposer des <strong>ateliers DIY autour du végétal</strong> : Terrarium, kokedama, Hydroculture, rempotage...</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Plus d'infos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Workshop Section"
    }
  ]
}
{% endschema %}
