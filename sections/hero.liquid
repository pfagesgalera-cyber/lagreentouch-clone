<section class="hero" style="background-image: url('{{ section.settings.hero_image | img_url: '1200x600' }}')">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <div class="feature-boxes">
      {% for block in section.blocks %}
        <div class="feature-box">
          <img src="{{ block.settings.icon | img_url: '50x50' }}" alt="{{ block.settings.title }}">
          <div>
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 400px;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: flex-end;
    padding: 2rem 1rem;
  }
  
  @media (min-width: 640px) {
    .hero {
      height: 500px;
    }
  }
  
  @media (min-width: 1024px) {
    .hero {
      height: 600px;
    }
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.2);
  }
  
  .hero-content {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .feature-boxes {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .feature-box {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 1rem;
    border-radius: 0.5rem;
    display: flex;
    gap: 0.75rem;
    transition: all 0.3s;
  }
  
  .feature-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }
  
  .feature-box img {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
  }
  
  .feature-box h3 {
    font-size: 0.875rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }
  
  .feature-box p {
    font-size: 0.75rem;
    color: #666;
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
