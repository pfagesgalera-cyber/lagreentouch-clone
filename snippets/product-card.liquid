{% comment %}
  Product Card Snippet
  Usage: {% render 'product-card', product: product %}
{% endcomment %}

<a href="{{ product.url }}" class="product-card">
  <div class="product-image">
    {% if product.compare_at_price > product.price %}
      <span class="badge badge-sale">{{ 'products.sale' | t }}</span>
    {% endif %}
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}"
        alt="{{ product.title | escape }}"
        loading="lazy"
      >
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>
  <div class="product-info">
    <p class="product-vendor">{{ product.vendor }}</p>
    <h3 class="product-title">{{ product.title }}</h3>
    <p class="product-type">{{ product.type }}</p>
    <div class="product-price">
      <span class="price {% if product.compare_at_price > product.price %}price-sale{% endif %}">
        {{ product.price | money }}
      </span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
  </div>
</a>

<style>
  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
    background: white;
  }

  .product-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transform: translateY(-5px);
  }

  .product-card .product-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .product-card .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .product-card:hover .product-image img {
    transform: scale(1.1);
  }

  .product-card .badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    z-index: 10;
  }

  .product-card .badge-sale {
    background-color: #6a8f53;
    color: white;
  }

  .product-card .product-info {
    padding: 1rem;
  }

  .product-card .product-vendor {
    font-size: 0.75rem;
    color: #999;
    margin: 0 0 0.25rem 0;
  }

  .product-card .product-title {
    font-size: 0.875rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #333;
    transition: color 0.2s;
  }

  .product-card:hover .product-title {
    color: #6a8f53;
  }

  .product-card .product-type {
    font-size: 0.75rem;
    color: #666;
    margin: 0 0 0.75rem 0;
  }

  .product-card .product-price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .product-card .price {
    font-weight: 700;
    font-size: 1rem;
  }

  .product-card .price-sale {
    color: #e74c3c;
  }

  .product-card .compare-price {
    font-size: 0.875rem;
    color: #999;
    text-decoration: line-through;
  }
</style>
